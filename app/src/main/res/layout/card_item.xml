<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_item"
    android:background="@drawable/restaurant_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"

        >

        <TextView
            android:id="@+id/recycler_restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:text="Restaurant Name"
            android:textColor="@color/HintColor"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/recycler_restaurant_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_restaurantName"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/restaurant_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_restaurant_price"
            android:layout_marginTop="44dp"
            android:text="079999999"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recycle_card_image_item"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@id/recycler_restaurantName"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="127dp"
            android:layout_toEndOf="@+id/recycler_restaurant_price" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>