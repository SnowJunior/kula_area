<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/booking_history_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:background="@drawable/restaurant_background"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bh_rest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Restaurant Name:"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/bh_person_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:hint="Full Name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bh_rest_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Phone:"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/bh_rest_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="No of People: "
            android:textSize="18dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/bh_rest_occasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Occasion: "
            android:textSize="18dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/bh_rest_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:hint="Date: "
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>